<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="sick_mode"
        android:title="Sick mode"
        android:summary="Only up to 3 words will show up" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/difficulty_entries"
        android:entryValues="@array/difficulty_values"
        android:key="difficulty"
        android:title="Difficulty level"
        android:dialogTitle="Difficulty"/>

    <EditTextPreference
        android:defaultValue="5000"
        android:key="vocabulary"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Vocabulary" />

</PreferenceScreen>